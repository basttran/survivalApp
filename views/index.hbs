<div class="login">


    {{> flash_messages}}


    {{#if currentUser}}
    <h3>Welcome back, <a href="/profile">{{currentUser.userName}}</a>!</h3>
    {{else}}
    <p></p>
    {{/if}}
    <form action="/process-login" method="POST">

        <label class="email">

            <input type="email" name="email" placeholder="Email" required="true" />
        </label>

        <label class="password">

            <input type="password" name="originalPassword" placeholder="Password" required="true">
        </label>
        <a href="/passwordforgotten" class="passwordForgotten">Forgot password?</a>
        <button>Log In</button>
    </form>



    <a href="/signup" class="homesignup">
        <p class="noaccount">or</p>
        <p class="signup">Sign Up</p>
    </a>



    <a href="/species" class="all-specimens">See All Plants</a>
</div>