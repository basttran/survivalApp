<h2>Edit a Plant</h2>

<form action="/my-plants/{{plantItem._id}}/process-edit/" method="POST" enctype="multipart/form-data">

  <label>
    Plant Name:
    <input type="text" name="plantName" value="{{plantItem.plantName}}" placeholder="Frankenstein" required />
  </label>

  <label>
    Description:
    <input type="text" name="plantDescription" value="{{plantItem.plantDescription}}" placeholder="Mary Shelley"
      required />
  </label>

  <label>
    Species:
    <input type="text" name="plantSpecies" value="{{plantItem.plantSpecies}}" placeholder="Blah blah blah ..."
      minlength="8" required />
  </label>

  <label>
    Picture:
    <input type="file" name="pictureUpload" required />
  </label>

  <button>Save Changes</button>
</form>