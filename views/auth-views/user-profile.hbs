<h2 class="profile-title">My profile</h2>

{{#if currentUser}}
<h3 class="profile-name">Hi {{currentUser.userName}}!</h3>

{{!-- <b>{{currentUser.email}}</b> --}}
<img src="{{currentUser.profilePicUrl}}" class="profile-picture" />

<a href="/user-edit" class="user-edit-link">Update my Profile</a>

<span id="scroll1">
  <span></span>
</span>

<span id="scroll2">
  <span></span>
</span>

{{/if}}


<h3 class="my-plants-name">My Plants</h3>

{{!-- displays flash messages since we redirect here from /process-plant --}}

{{> flash_messages}}

<a href="/plant-add" class="add-a-plant">Add a Plant</a>


{{!-- // CODE BAST --}}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    {{#each plantIndices}}
    {{{this}}}
    {{/each}}
  </ol>

  <div class="carousel-inner">
    {{#each plantArray}}
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{this.plantPicUrl}}" alt="{{this.plantName}}">
    </div>
    {{/each}}
  </div>
  {{!// @index--}}
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
{{!-- // CODE BAST --}}


