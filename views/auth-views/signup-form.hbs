{{> flash_messages}}

<h2>Sign Up</h2>

<form action="/process-signup" method="POST" class="processsignup">

  <label>
    <input type="file" name="profilPicUpload" placeholder="Upload a picture" required />
  </label>

  <label>
    <input type="text" name="userName" placeholder="Your User Name" unique="true" required="true" />
  </label>

  <label>
    <input type="email" name="email" placeholder="Your Email" unique="true" required="true" />
  </label>

  <label>
    <input type="password" name="originalPassword" placeholder="Password (contain digit 0-9)" required="true" />
  </label>

  <button>Sign Up</button>
</form>


